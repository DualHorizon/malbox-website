---

<header class="fixed w-full backdrop-blur-md z-50 border-b border-gray-800">
  <div
    class="container mx-auto px-4 py-5 flex justify-between items-center relative"
  >
    <!-- Logo and name -->
    <div class="flex items-center space-x-3">
      <img src="/malbox-logo.svg" alt="Malbox Logo" class="h-9 w-9" />
      <span class="font-bold text-2xl text-white">Malbox</span>
    </div>

    <!-- Navigation links -->
    <nav class="hidden md:block">
      <ul class="flex space-x-10">
        <li>
          <a
            href="#features"
            class="text-gray-300 hover:text-blue-400 transition text-lg"
            >Features</a>
        </li>
        <li>
          <a
            href="#plugins"
            class="text-gray-300 hover:text-blue-400 transition text-lg"
            >Plugins</a>
        </li>
        <li>
          <a
            href="#architecture"
            class="text-gray-300 hover:text-blue-400 transition text-lg"
            >Architecture</a>
        </li>
        <li>
          <a
            href="#getting-started"
            class="text-gray-300 hover:text-blue-400 transition text-lg"
            >Getting Started</a>
        </li>
        <li>
          <a
            href="#community"
            class="text-gray-300 hover:text-blue-400 transition text-lg"
            >Community</a>
        </li>
      </ul>
    </nav>

    <!-- GitHub icon -->
    <a
      href="https://github.com/DualHorizon/malbox"
      target="_blank"
      class="p-2.5 rounded-full hover:bg-gray-800/50 transition-all duration-300 group"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="28"
        height="28"
        viewBox="0 0 24 24"
        class="text-gray-300 group-hover:text-blue-400 transition-colors duration-300"
        fill="currentColor"
      >
        <path
          d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
        ></path>
      </svg>
    </a>

    <!-- Mobile menu button (hidden on desktop) -->
    <button
      class="md:hidden p-2 rounded-md hover:bg-gray-800/50 transition-all text-gray-300"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile menu (hidden by default) -->
  <div class="md:hidden hidden bg-gray-900/95 backdrop-blur-md">
    <div class="container mx-auto px-4 py-4">
      <ul class="space-y-4">
        <li>
          <a
            href="#features"
            class="block py-2 text-gray-300 hover:text-blue-400 transition text-lg"
            >Features</a>
        </li>
        <li>
          <a
            href="#plugins"
            class="block py-2 text-gray-300 hover:text-blue-400 transition text-lg"
            >Plugins</a>
        </li>
        <li>
          <a
            href="#architecture"
            class="block py-2 text-gray-300 hover:text-blue-400 transition text-lg"
            >Architecture</a>
        </li>
        <li>
          <a
            href="#getting-started"
            class="block py-2 text-gray-300 hover:text-blue-400 transition text-lg"
            >Getting Started</a>
        </li>
        <li>
          <a
            href="#community"
            class="block py-2 text-gray-300 hover:text-blue-400 transition text-lg"
            >Community</a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  // Simple mobile menu toggle
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.querySelector("button.md\\:hidden");
    const mobileMenu = document.querySelector("div.md\\:hidden");

    if (menuButton && mobileMenu) {
      menuButton.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
