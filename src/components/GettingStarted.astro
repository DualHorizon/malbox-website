          <h3 class="text-2xl font-semibold mb-6 text-white">Configuration</h3>
          <p class="text-gray-400 mb-6">
            Edit the configuration file to customize Malbox for your
            environment.
          </p>

          <div
            class="code-block p-4 rounded-md font-mono text-sm text-gray-300 overflow-auto relative"
          >
            <pre><code>[http]
  host = "127.0.0.1"
  port = 5000
  
  [database]
  host = "postgresql://postgres:password@localhost/malbox_db"
  
  [infrastructure]
  provider = "vmware"  # "kvm", "virtualbox"
  environment = "dev"
  
  [analysis]
  timeout = 300
  max_vms = 10
  default_profile = "default/linux"</code></pre>
